{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "EPINCMS",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "global": {
      "languages": [
        {
          "language": "en",
          "href": "https://mintlify.com"
        },
        {
          "language": "tr",
          "default": true,
          "href": "https://mintlify.com"
        }
      ]
    },
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index"
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mintlify",
      "github": "https://github.com/EPINCMS",
      "linkedin": "https://linkedin.com/company/epincms"
    }
  },
  "appearance": {
    "strict": false
  },
  "integrations": {
    "telemetry": {
      "enabled": false
    }
  },
  "api": {
    "playground": {
      "proxy": true
    }
  }
}
